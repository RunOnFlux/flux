# AWS ECR Test Configuration
# Copy this file to .env.test and fill in your values

# AWS Account Configuration
AWS_ACCOUNT_ID=                 # From: aws sts get-caller-identity --query 'Account' --output text
AWS_REGION=eu-west-2           # Your chosen AWS region (e.g., eu-west-2, us-east-1)

# AWS Credentials (from IAM user creation)
AWS_ACCESS_KEY_ID=             # From: aws iam create-access-key --user-name flux-ecr-test-user
AWS_SECRET_ACCESS_KEY=         # From IAM user creation (save immediately!)

# ECR Repository Configuration
ECR_REPOSITORY_URI=            # From: aws ecr describe-repositories --query 'repositories[0].repositoryUri'
ECR_IMAGE_TAG=test             # Format: TAG_NAME (tag only, URI already includes repo path)

