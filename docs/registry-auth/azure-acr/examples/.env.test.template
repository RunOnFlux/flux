# Azure ACR Test Configuration
# Copy this file to .env.test and fill in your values

# Azure Account Configuration
AZURE_SUBSCRIPTION_ID=          # From: az account show --query id --output tsv
AZURE_REGION=uksouth           # Your chosen Azure region (e.g., uksouth, westeurope)
AZURE_TENANT_ID=               # From: az account show --query tenantId --output tsv

# Azure Container Registry
ACR_NAME=                      # Your ACR name (must be globally unique)
ACR_LOGIN_SERVER=              # From: az acr show --name $ACR_NAME --query loginServer --output tsv
ACR_IMAGE_TAG=test:latest      # Format: IMAGE_NAME:TAG (full image path with tag)

# Service Principal Credentials (from Step 2)
AZURE_CLIENT_ID=               # "appId" from: az ad sp create-for-rbac
AZURE_CLIENT_SECRET=           # "password" from service principal creation (SAVE IMMEDIATELY!)

